                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <Switch
                    android:id="@+id/snacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
